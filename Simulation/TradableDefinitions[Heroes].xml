<?xml version="1.0" encoding="utf-8" ?>
<Datatable xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xsd="http://www.w3.org/2001/XMLSchema" xsi:noNamespaceSchemaLocation="../Schemas/TradableDefinition.xsd">

    <!-- BasePrice must return a float. -->
    <!-- Vars: Marketplace (sim), SubCategory (sim), Level (int) -->

    <!-- Name is built as: 'TradableHero' + (Hero class name - 'HeroClass') -->
    <TradableHeroDefinition Name="TradableHeroAdmiral" Category="TradableCategoryHero" SubCategory="TradableSubCategoryHeroAdmiral">
      <BasePrice>150 + $(Level) * 850 + ( Property(Marketplace, Turn) * 65 )</BasePrice>
		  <SimulationDescriptorReference Name="TradableHeroAdmiral"/>
    </TradableHeroDefinition>

    <TradableHeroDefinition Name="TradableHeroAdministrator" Category="TradableCategoryHero" SubCategory="TradableSubCategoryHeroAdministrator">
      <BasePrice>150 + $(Level) * 850 + ( Property(Marketplace, Turn) * 65 )</BasePrice>
      <SimulationDescriptorReference Name="TradableHeroAdministrator"/>
    </TradableHeroDefinition>

    <TradableHeroDefinition Name="TradableHeroAdventurer" Category="TradableCategoryHero" SubCategory="TradableSubCategoryHeroAdventurer">
      <BasePrice>150 + $(Level) * 850 + ( Property(Marketplace, Turn) * 65 )</BasePrice>
      <SimulationDescriptorReference Name="TradableHeroAdventurer"/>
    </TradableHeroDefinition>

    <TradableHeroDefinition Name="TradableHeroCorporate" Category="TradableCategoryHero" SubCategory="TradableSubCategoryHeroCorporate">
      <BasePrice>150 + $(Level) * 850 + ( Property(Marketplace, Turn) * 65 )</BasePrice>
      <SimulationDescriptorReference Name="TradableHeroCorporate"/>
    </TradableHeroDefinition>
    
</Datatable>