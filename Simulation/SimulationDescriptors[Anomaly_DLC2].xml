<?xml version="1.0" encoding="utf-8" ?>
<Datatable xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xsd="http://www.w3.org/2001/XMLSchema" xsi:noNamespaceSchemaLocation="../Schemas/Amplitude.Unity.Simulation.SimulationDescriptor.xsd">

    <SimulationDescriptor Name="PlanetAnomalyRemainsEncounterLarge" Type="PlanetAnomaly">
        <Modifier TargetProperty="PlanetRawDust"    Value="5" Operation="Subtraction" Path="ClassPlanet"/>
        <Modifier TargetProperty="PlanetRawScience" Value="5" Operation="Addition" Path="ClassPlanet"/>
    </SimulationDescriptor>
    <SimulationDescriptor Name="PlanetAnomalyRemainsEncounterMedium" Type="PlanetAnomaly">
        <Modifier TargetProperty="PlanetRawDust"    Value="3" Operation="Subtraction" Path="ClassPlanet"/>
        <Modifier TargetProperty="PlanetRawScience" Value="3" Operation="Addition" Path="ClassPlanet"/>
    </SimulationDescriptor>
    <SimulationDescriptor Name="PlanetAnomalyRemainsEncounterSmall" Type="PlanetAnomaly">
        <Modifier TargetProperty="PlanetRawDust"    Value="1" Operation="Subtraction" Path="ClassPlanet"/>
        <Modifier TargetProperty="PlanetRawScience" Value="1" Operation="Addition" Path="ClassPlanet"/>
    </SimulationDescriptor>

    <SimulationDescriptor Name="PlanetAnomalyRemainsMinorFaction" Type="PlanetAnomaly">
        <Modifier           TargetProperty="PlanetRawDust"      Operation="Addition" Value="1"   Path="ClassPlanet"/>
