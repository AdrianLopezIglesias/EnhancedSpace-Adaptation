    </SimulationDescriptor>
    <SimulationDescriptor Name="PlanetAnomalyRemainsPirateLairMedium" Type="PlanetAnomaly">
        <Modifier   TargetProperty="PlanetRawDust"      Operation="Addition" Value="3"   Path="ClassPlanet"/>
        <Modifier   TargetProperty="PlanetRawIndustry"  Operation="Addition" Value="3"   Path="ClassPlanet"/>
    </SimulationDescriptor>
    <SimulationDescriptor Name="PlanetAnomalyRemainsPirateLairSmall" Type="PlanetAnomaly">
        <Modifier   TargetProperty="PlanetRawDust"      Operation="Addition" Value="1"   Path="ClassPlanet"/>
        <Modifier   TargetProperty="PlanetRawIndustry"  Operation="Addition" Value="1"   Path="ClassPlanet"/>
    </SimulationDescriptor>

    <SimulationDescriptor Name="PlanetAnomalyRemainsGroundBattleLarge" Type="PlanetAnomaly">
        <Modifier TargetProperty="PlanetRawFood"    Value="5" Operation="Subtraction" Path="ClassPlanet"/>
